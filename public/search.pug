html
    head
        title Search
        link(rel='stylesheet', href='/styles.css')
        script(src='/js/client.js')

    body(onload='loadSearchPage()')
        include header.pug
        div(class='search-container')
            h2 Search
            input#search-input(type='text')
            button#search-button Search
            br
            label(for='category-select') Category:
            select#category-select(name='category-select')
                option All
                option Sculpture
                option Technology
                option Monument
                option Painting
                option Photography
                option Illustration
                option Embroidery
                option DIY
                option Mural
                option Street Art
            br
            label(for='medium-input') Medium:
            input#medium-input(type='text', name='medium-input', placeholder='All')
            br
            label(for='artist-input') Artist:
            input#artist-input(type='text', placeholder='All')

        div#result-container