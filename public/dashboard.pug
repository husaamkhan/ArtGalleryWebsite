html
    head
        title Dashboard
        script(src='/js/client.js')
        link(rel='stylesheet', href='/styles.css')
    
    body(onload='loadDashboard()')
        include header.pug
        h2=`Welcome ${firstname}`

        div(class='dashboard-options')
            ul
                li
                    a(href='/user/following') View artist you follow
                li
                    a(href='/user/workshops-joined') View workshops you have joined

                if artist
                    li
                        a(href='/user/workshops-hosted') View workshops you have hosted
                    li
                        a(href='/workshops/create-workshop') Create a workshop
                    li
                        a(href='/user/post-artpiece') Post an artpiece
        
        if artist
            h4 Your artwork
            if artworkLength == 0
                p No posts yet!
            else
                ul#artwork-list